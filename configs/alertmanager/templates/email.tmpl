{{ define "email.html" }}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <style>
        body {
            font-family: Arial, sans-serif;
            line-height: 1.6;
            color: #333;
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }
        .header {
            background-color: {{ if eq .Status "firing" }}#d32f2f{{ else }}#388e3c{{ end }};
            color: white;
            padding: 20px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
        .alert {
            background-color: #f5f5f5;
            border-left: 4px solid {{ if eq .Status "firing" }}#d32f2f{{ else }}#388e3c{{ end }};
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 3px;
        }
        .alert-title {
            font-size: 18px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
        }
        .alert-meta {
            font-size: 14px;
            color: #666;
            margin-top: 10px;
        }
        .label {
            display: inline-block;
            background-color: #e0e0e0;
            padding: 3px 8px;
            border-radius: 3px;
            margin-right: 5px;
            font-size: 12px;
        }
        .severity-critical {
            background-color: #d32f2f;
            color: white;
        }
        .severity-warning {
            background-color: #ffa000;
            color: white;
        }
        .button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #1976d2;
            color: white;
            text-decoration: none;
            border-radius: 3px;
            margin-top: 10px;
        }
        .footer {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #ddd;
            font-size: 12px;
            color: #999;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>{{ if eq .Status "firing" }}ðŸ”¥ Alert Firing{{ else }}âœ… Alert Resolved{{ end }}</h1>
        <p>{{ .Status | toUpper }} - {{ .Alerts | len }} alert(s)</p>
    </div>

    {{ range .Alerts }}
    <div class="alert">
        <div class="alert-title">{{ .Labels.alertname }}</div>
        
        <div style="margin: 10px 0;">
            <strong>Summary:</strong> {{ .Annotations.summary }}
        </div>
        
        <div style="margin: 10px 0;">
            <strong>Description:</strong> {{ .Annotations.description }}
        </div>
        
        <div style="margin: 10px 0;">
            <span class="label severity-{{ .Labels.severity }}">{{ .Labels.severity | toUpper }}</span>
            <span class="label">{{ .Labels.component }}</span>
        </div>
        
        {{ if .Annotations.runbook_url }}
        <div style="margin: 15px 0;">
            <a href="{{ .Annotations.runbook_url }}" class="button">ðŸ“– View Runbook</a>
        </div>
        {{ end }}
        
        <div class="alert-meta">
            <strong>Started:</strong> {{ .StartsAt.Format "2006-01-02 15:04:05 MST" }}<br>
            {{ if .EndsAt }}
            <strong>Ended:</strong> {{ .EndsAt.Format "2006-01-02 15:04:05 MST" }}<br>
            {{ end }}
            <strong>Instance:</strong> {{ .Labels.instance }}
        </div>
    </div>
    {{ end }}

    <div class="footer">
        <p>This is an automated alert from RAG Automation Agent monitoring system.</p>
        <p>For questions or issues, contact the DevOps team.</p>
    </div>
</body>
</html>
{{ end }}
