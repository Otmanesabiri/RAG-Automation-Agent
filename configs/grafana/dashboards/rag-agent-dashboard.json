{
  "dashboard": {
    "title": "RAG Agent - API Performance",
    "tags": ["rag", "api", "performance"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate (req/sec)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(rag_agent_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Response Time (P50, P95, P99)",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.50, rate(rag_agent_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P50"
          },
          {
            "expr": "histogram_quantile(0.95, rate(rag_agent_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P95"
          },
          {
            "expr": "histogram_quantile(0.99, rate(rag_agent_request_duration_seconds_bucket[5m]))",
            "legendFormat": "P99"
          }
        ]
      },
      {
        "id": 3,
        "title": "Error Rate (%)",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(rag_agent_requests_total{status=~\"5..\"}[5m]) / rate(rag_agent_requests_total[5m]) * 100",
            "legendFormat": "Error Rate"
          }
        ]
      },
      {
        "id": 4,
        "title": "Ingestion & Query Volume",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "rate(rag_agent_ingestion_documents_total[5m])",
            "legendFormat": "Ingestion Rate"
          },
          {
            "expr": "rate(rag_agent_queries_total[5m])",
            "legendFormat": "Query Rate"
          }
        ]
      },
      {
        "id": 5,
        "title": "Total Documents Ingested",
        "type": "singlestat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rag_agent_ingestion_documents_total"
          }
        ]
      },
      {
        "id": 6,
        "title": "Total Queries",
        "type": "singlestat",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rag_agent_queries_total"
          }
        ]
      },
      {
        "id": 7,
        "title": "Embedding Tokens (Total)",
        "type": "singlestat",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "rag_agent_embedding_tokens_total"
          }
        ]
      },
      {
        "id": 8,
        "title": "Status Code Distribution",
        "type": "piechart",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 8},
        "targets": [
          {
            "expr": "sum by (status) (rag_agent_requests_total)",
            "legendFormat": "{{status}}"
          }
        ]
      }
    ]
  }
}
